# ==============================================================================
# NoteApp Environment Configuration (EXAMPLE)
# ==============================================================================
# Copy this file to .env and configure with your actual values
# This file configures all Docker Compose services (PostgreSQL, Redis, API, Celery)
# ==============================================================================

# ==============================================================================
# Database Configuration (PostgreSQL)
# ==============================================================================
POSTGRES_DB=noteapp_db
POSTGRES_USER=noteapp_user
POSTGRES_PASSWORD=your_secure_password_here

# ==============================================================================
# Django Configuration
# ==============================================================================
# SECURITY WARNING: Generate a new secret key!
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-generate-a-new-one

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1,api

# ==============================================================================
# JWT Token Configuration
# ==============================================================================
# Access token lifetime in minutes (default: 15 minutes)
JWT_ACCESS_TOKEN_LIFETIME=15

# Refresh token lifetime in minutes (default: 10080 = 7 days)
JWT_REFRESH_TOKEN_LIFETIME=10080

# ==============================================================================
# CORS Configuration
# ==============================================================================
# Allowed origins for CORS (comma-separated, no spaces)
# Add your frontend URL here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================================================
# Gunicorn Configuration (Production Web Server)
# ==============================================================================
GUNICORN_WORKERS=4
GUNICORN_THREADS=2

# ==============================================================================
# Optional: Django Superuser Auto-Creation
# ==============================================================================
# Uncomment and set these to automatically create a superuser on first run
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_EMAIL=admin@example.com
# DJANGO_SUPERUSER_PASSWORD=changeme123

# ==============================================================================
# Redis Configuration (Optional)
# ==============================================================================
# Uncomment to set a Redis password (recommended for production)
# REDIS_PASSWORD=your_redis_password_here
